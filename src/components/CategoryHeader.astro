---
import ThemeToggle from './ThemeToggle.astro';

export interface Props {
  title: string;
  currentPage: string;
}

const { title, currentPage } = Astro.props;
---

<header class="mb-8">
  <div class="mb-6">
    <div class="flex items-center justify-center gap-3 mb-2">
      <h1 class="text-2xl font-bold text-foreground">
        {title}
      </h1>
      <ThemeToggle />
    </div>
  </div>
  
  <slot name="filters" />
</header>