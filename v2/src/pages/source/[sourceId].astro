---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Navigation from '../../components/Navigation.astro';
import Article from '../../components/Article.astro';
import Sidebar from '../../components/Sidebar.astro';
import { dataLoader } from '../../lib/data-loader';
import '../../styles/global.css';

// Get sourceId and page
const { sourceId } = Astro.params;
const page = parseInt(Astro.url.searchParams.get('page') || '1');

// Validate sourceId
if (!sourceId) {
  return Astro.redirect('/');
}

// Load data
const sourceItems = await dataLoader.getBySource(sourceId);
const categoryCounts = await dataLoader.getCategoryCounts();
const { items, totalPages, totalItems, hasNext, hasPrev } = dataLoader.paginate(sourceItems, page);

// Get source name from the first item, or use sourceId as fallback
const sourceName = sourceItems.length > 0 ? sourceItems[0].sourceName : sourceId.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());

// Get source counts for sidebar  
const sourceCounts = await dataLoader.getSourceCounts();
---

<Layout title={`${sourceName} - Latest News`}>
  <Header />
  <Navigation categoryCounts={categoryCounts} />
  
  <main class="main-content">
    <div class="content-wrapper">
      <div class="articles-section">
        <div class="category-header">
          <div class="category-info">
            <h1 class="category-title">{sourceName}</h1>
            <p class="category-meta">{totalItems} articles</p>
          </div>
        </div>

        {items.length === 0 ? (
          <div class="empty-state">
            <div class="empty-icon">üì∞</div>
            <h2>No articles found</h2>
            <p>This source doesn't have any articles yet or they may still be loading.</p>
            <a href="/" class="back-home">‚Üê Back to Home</a>
          </div>
        ) : (
          <>
            <div class="articles-grid">
              {items.map(article => (
                <Article article={article} />
              ))}
            </div>

            {totalPages > 1 && (
              <div class="pagination">
                {hasPrev && (
                  <a href={`/source/${sourceId}?page=${page - 1}`} class="pagination-link">
                    ‚Üê Previous
                  </a>
                )}
                
                <span class="pagination-info">
                  Page {page} of {totalPages}
                </span>
                
                {hasNext && (
                  <a href={`/source/${sourceId}?page=${page + 1}`} class="pagination-link">
                    Next ‚Üí
                  </a>
                )}
              </div>
            )}
          </>
        )}
      </div>

      <div class="sidebar-section">
        <Sidebar sourceCounts={sourceCounts} categoryCounts={categoryCounts} />
      </div>
    </div>
  </main>
</Layout>

<style>
  .main-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 40px;
    align-items: start;
  }

  .articles-section {
    min-width: 0; /* Prevent grid overflow */
  }

  .category-header {
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 2px solid #e8ebed;
  }

  .category-info {
    display: flex;
    align-items: baseline;
    gap: 16px;
    flex-wrap: wrap;
  }

  .category-title {
    font-size: 32px;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0;
    line-height: 1.2;
  }

  .category-meta {
    color: #9ca3af;
    font-size: 14px;
    font-weight: 500;
    margin: 0;
    white-space: nowrap;
  }

  .articles-grid {
    display: grid;
    gap: 24px;
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: #6b7280;
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 16px;
  }

  .empty-state h2 {
    font-size: 24px;
    font-weight: 600;
    color: #374151;
    margin-bottom: 8px;
  }

  .empty-state p {
    font-size: 16px;
    margin-bottom: 24px;
    line-height: 1.6;
  }

  .back-home {
    display: inline-block;
    color: #1e40af;
    text-decoration: none;
    font-weight: 500;
    padding: 8px 16px;
    border: 1px solid #e8ebed;
    border-radius: 6px;
    transition: all 0.15s ease;
  }

  .back-home:hover {
    background: #f8fafc;
    border-color: #d1d5db;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 48px;
    padding: 24px 0;
    border-top: 1px solid #e8ebed;
  }

  .pagination-link {
    color: #1e40af;
    text-decoration: none;
    font-weight: 500;
    padding: 8px 16px;
    border: 1px solid #e8ebed;
    border-radius: 6px;
    transition: all 0.15s ease;
  }

  .pagination-link:hover {
    background: #f8fafc;
    border-color: #d1d5db;
  }

  .pagination-info {
    color: #6b7280;
    font-size: 14px;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .content-wrapper {
      grid-template-columns: 1fr 280px;
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    
    .main-content {
      padding: 16px;
    }
    
    .category-title {
      font-size: 28px;
    }
    
    .category-info {
      gap: 12px;
    }
    
    .pagination {
      margin-top: 32px;
      padding: 16px 0;
    }
  }

  @media (max-width: 480px) {
    .category-title {
      font-size: 24px;
    }
    
    .pagination {
      flex-direction: column;
      gap: 12px;
    }
    
    .pagination-info {
      order: -1;
    }
  }
</style>