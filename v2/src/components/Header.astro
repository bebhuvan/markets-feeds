---
import { formatTimeAgo } from '../lib/utils';

export interface Props {
  lastUpdate?: Date;
  totalArticles?: number;
}

const { lastUpdate = new Date(), totalArticles = 0 } = Astro.props;
---

<header class="header">
  <div class="container">
    <div class="header-top">
      <div class="header-brand">
        <a href="/" class="logo">
          <span class="logo-icon">ðŸ“Š</span>
          <span class="logo-text">Markets Feeds</span>
        </a>
        <span class="tagline">Financial Intelligence Hub</span>
      </div>
      
      <div class="header-stats">
        <div class="stat">
          <span class="stat-value">{totalArticles.toLocaleString()}</span>
          <span class="stat-label">articles</span>
        </div>
        <div class="stat">
          <span class="stat-value">{formatTimeAgo(lastUpdate)}</span>
          <span class="stat-label">updated</span>
        </div>
        <a href="/sources" class="header-link sources-link">Sources</a>
        <a href="/rss.xml" class="header-link" title="RSS Feed">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid #e8ebed;
    background: rgba(250, 251, 252, 0.95);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-top {
    padding: 16px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-brand {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: #2a2a2a;
    font-weight: 600;
    font-size: 18px;
  }

  .logo-icon {
    font-size: 24px;
  }

  .logo:hover .logo-text {
    color: #1e40af;
  }

  .tagline {
    color: #6b7280;
    font-size: 13px;
    padding-left: 16px;
    border-left: 1px solid #e8ebed;
  }

  .header-stats {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .stat-value {
    font-size: 16px;
    font-weight: 600;
    color: #2a2a2a;
  }

  .stat-label {
    font-size: 11px;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .header-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 14px;
    padding: 6px 12px;
    border-radius: 4px;
    transition: all 0.15s ease;
  }

  .header-link:hover {
    color: #2a2a2a;
    background: #f3f4f6;
  }

  .sources-link {
    background: #f8f9fa;
    color: #374151;
    border: 1px solid #e5e7eb;
    font-weight: 500;
  }

  .sources-link:hover {
    background: #f1f3f4;
    color: #1f2937;
    border-color: #d1d5db;
  }

  @media (max-width: 768px) {
    .tagline {
      display: none;
    }
    
    .header-stats {
      gap: 16px;
    }
    
    .stat {
      display: none;
    }
  }
</style>