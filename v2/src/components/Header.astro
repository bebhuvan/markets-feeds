---
import { formatTimeAgo } from '../lib/utils';

export interface Props {
  lastUpdate?: Date;
  totalArticles?: number;
}

const { lastUpdate = new Date(), totalArticles = 0 } = Astro.props;
---

<header class="header">
  <div class="container">
    <div class="header-top">
      <div class="header-brand">
        <a href="/" class="logo">
          <span class="logo-icon">ðŸ“Š</span>
          <span class="logo-text">Markets Feeds</span>
        </a>
        <span class="tagline">Financial Intelligence Hub</span>
      </div>
      
      <div class="header-stats">
        <div class="stat">
          <span class="stat-value">{totalArticles.toLocaleString()}</span>
          <span class="stat-label">articles</span>
        </div>
        <div class="stat">
          <span class="stat-value">{formatTimeAgo(lastUpdate)}</span>
          <span class="stat-label">updated</span>
        </div>
        <a href="/sources" class="header-link">Sources</a>
        <a href="/rss.xml" class="header-link" title="RSS Feed">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3.429 5.1v2.4c7.248 0 13.114 5.886 13.114 13.143h2.4C18.943 12.18 11.891 5.1 3.429 5.1zm0 4.8v2.4c3.832 0 6.857 3.035 6.857 6.857h2.4c0-5.128-4.129-9.257-9.257-9.257zM6.171 16.486c0 1.51-1.224 2.743-2.743 2.743S.686 17.996.686 16.486s1.224-2.743 2.743-2.743 2.742 1.233 2.742 2.743z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid #e8ebed;
    background: rgba(250, 251, 252, 0.95);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-top {
    padding: 16px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-brand {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: #2a2a2a;
    font-weight: 600;
    font-size: 18px;
  }

  .logo-icon {
    font-size: 24px;
  }

  .logo:hover .logo-text {
    color: #1e40af;
  }

  .tagline {
    color: #6b7280;
    font-size: 13px;
    padding-left: 16px;
    border-left: 1px solid #e8ebed;
  }

  .header-stats {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .stat-value {
    font-size: 16px;
    font-weight: 600;
    color: #2a2a2a;
  }

  .stat-label {
    font-size: 11px;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .header-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 14px;
    padding: 6px 12px;
    border-radius: 4px;
    transition: all 0.15s ease;
  }

  .header-link:hover {
    color: #2a2a2a;
    background: #f3f4f6;
  }

  @media (max-width: 768px) {
    .tagline {
      display: none;
    }
    
    .header-stats {
      gap: 16px;
    }
    
    .stat {
      display: none;
    }
  }
</style>